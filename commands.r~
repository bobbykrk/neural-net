pts2 <- mvrnorm(n=100, c(10, 10), matrix(c(8, 1, 7, 1), 2, 2), empirical = TRUE)
pts1 <- mvrnorm(n=100, c(0, 0), matrix(c(10, 3, 3, 2), 2, 2), empirical = TRUE)
plot(c(pts1,pts2))
pts1.frame <- data.frame(pts1)
pts1.frame$col <- rep(1,)
fr <- rbind(pts1.frame, pts2.frame)
plot(fr$X1,fr$X2, col=c("red","blue")[fr$col])
